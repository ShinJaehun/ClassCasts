<!DOCTYPE html>
<html>
<head>
  <title>ClassCasts</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
<div class="container">
  <div class="leaderboard">  
    <h1>ClassCasts</h1>  
</div>  

<div class="navbar navbar">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      
      <a class="brand" href="http://gunsmoke.vps.phps.kr:3000"><strong>쑥쑥오름교실</strong></a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "과학수업영상", casts_path %></li>
          <li><%= link_to "학습자료" %></li>
          <li><%= link_to "수행평가" %></li>
          <li><%= link_to "로그인" %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div id="log_status">
    <% if user_signed_in? %>
        <%= link_to current_user.email, edit_user_registration_path(current_user) %>
        |
        <%= link_to "Log out", destroy_user_session_path, :method => :delete %>
    <% else %>
        <%= link_to "Register", new_user_registration_path %>
        |
        <%= link_to "Log in", new_user_session_path %>
    <% end %>
</div>

<div id="flash-banner">
  <% flash.each do |key, msg| %>
    <%= content_tag :div, msg, :class => "flash " + key.to_s, :id => key.to_s + "-message" %>
    <%= content_tag :script, :type => "text/javascript" do %>
      $('#<%= key.to_s + "-message" %>').css('display', 'none');
      $('#<%= key.to_s + "-message" %>').slideDown().delay(1000).slideUp();
    <% end %>
  <% end %>
</div>

  <%= yield %>

</body>

<footer>  
<p>© ClassCasts 2013</p>  
</footer>  
</html>
