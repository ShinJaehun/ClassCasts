<%- model_class = Cast -%>

<!-- Example row of columns -->
<div class="container">  
  <div class="row">  
    <% @casts.each do |cast| %>
      <div class="span4">  
        <img src="http://img.youtube.com/vi/<%= cast.video_link.split('/').last %>/mqdefault.jpg" />
        <h4><%= link_to cast.title, cast_path(cast) %></h4>  
        <p><%= cast.description %></p>  
        <p><a class="btn btn-success btn-large" href="#">View apps</a></p>  
      </div>  
    <% end %>
  </div>
</div>  


<table class="table table-striped">
   <tbody>
    <% @casts.each do |cast| %>
      <tr>
        <td><img src="http://img.youtube.com/vi/<%= cast.video_link.split('/').last %>/default.jpg" /></td>
        <td><%= link_to cast.title, cast_path(cast) %></td>
        <td><%= cast.description %></td>
        <td><%=l cast.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cast_path(cast), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cast_path(cast),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

