<div class="container">

  <div class="row">

        <div class="span8">
 

<table class="table table-striped">

  <thead>
    <tr>
      <th >제목</th>
      <th>내용</th>
      <th><% if can? :manage, @survey %><% end %></th>
    </tr>
  </thead> 
  <tbody>
      <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= survey.description %></td>
        <td>
          <%= link_to "Evaluation", new_survey_grade_path(survey), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_survey_path(survey), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers<.links.destroy")),
                      survey_path(survey),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>


<% end %>
    
  </tbody>

</table>

<div class="actions">
  <%= link_to 'Add New Survey', new_survey_path, :class => "btn btn-primary" %>
</div>

        </div><!-- end main area -->

          <aside class="span4">
          
            <div class="row">
            
              <div class="widget span4">
                <h3>수업영상</h3>

 <% @casts5.each do |cast| %>
<p>
          <%= link_to cast.title, cast_path(cast) %>
 </p>

<% end %>

            </div><!-- end widget row -->

              <div class="widget span4">
                <h3>공지사항</h3>

 <% @notice5.each do |post| %>

 <p>
          <%= link_to post.title, post_path(post) %>
 </p>
  <% end %>

              </div><!-- end widget -->

              <div class="widget span4">
                <h3>FAQ</h3>

 <% @faq5.each do |post| %>

<p>
          <%= link_to post.title, post_path(post) %>
 </p>

<% end %>

              </div><!-- end widget -->

              <div class="widget span4">
                <h3>질문과 답변</h3>

 <% @qna5.each do |post| %>

<p>
          <%= link_to post.title, post_path(post) %>
 </p>

<% end %>

              </div><!-- end widget -->

</div>
          </aside><!-- end sidebar -->

  </div>
</div><!-- end container -->


